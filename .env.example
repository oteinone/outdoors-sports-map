# Docker Environment Configuration
# Copy this to .env to customize Docker builds

# ============================================
# Docker Build Configuration  
# ============================================
DOCKER_TARGET=production
PORT=8080

# ============================================
# React App Build Arguments
# ============================================

# API Configuration (for production Docker builds)
REACT_APP_API_URL=/api
REACT_APP_APP_NAME=outdoors-sports-map

# Digitransit Geocoding API (optional)
REACT_APP_DIGITRANSIT_API_URL=https://api.digitransit.fi/geocoding/v1
REACT_APP_DIGITRANSIT_API_KEY=your-api-key-here

# ============================================
# Site-wide Notifications (optional)
# ============================================
REACT_APP_SITE_WIDE_NOTIFICATION_ENABLED=false
REACT_APP_SITE_WIDE_NOTIFICATION_TITLE_FI=
REACT_APP_SITE_WIDE_NOTIFICATION_TITLE_SV=
REACT_APP_SITE_WIDE_NOTIFICATION_TITLE_EN=
REACT_APP_SITE_WIDE_NOTIFICATION_FI=
REACT_APP_SITE_WIDE_NOTIFICATION_SV=
REACT_APP_SITE_WIDE_NOTIFICATION_EN=

# ============================================
# Build Features (optional)
# ============================================
GENERATE_SITEMAP=false